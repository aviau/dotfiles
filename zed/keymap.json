// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    // Global Settings
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
      "ctrl-shift-p": "command_palette::Toggle",
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "cmd-l": "workspace::ToggleRightDock",
      "cmd-shift-o": "outline_panel::ToggleFocus",
      "cmd-shift-a": "agent::ToggleFocus"
    }
  },
  {
    // Workspace
    "context": "Workspace",
    "bindings": {
      "cmd-w": null // Default is "workspace::CloseActiveDock"
    }
  },
  {
    // Pane
    "context": "Pane",
    "bindings": {
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    // Code Completion
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious",
      "ctrl-d": "editor::ContextMenuLast",
      "ctrl-u": "editor::ContextMenuFirst"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-g": "editor::OpenPermalinkToLine"
    }
  },
  // <EDIT PREDICTION: USE CTRL-ENTER>
  // https://zed.dev/docs/ai/edit-prediction#keybinding-example-always-use-alt-tab
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "cmd-enter": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "tab": "editor::Tab"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "tab": "editor::ComposeCompletion"
    }
  },
  {
    "context": "(VimControl && !menu) || vim_mode == replace || vim_mode == waiting",
    "bindings": {
      "tab": "vim::Tab"
    }
  },
  {
    "context": "vim_mode == literal",
    "bindings": {
      "tab": ["vim::Literal", ["tab", "\u0009"]]
    }
  }
  // </EDIT PREDICTION>
]
